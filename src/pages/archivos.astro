const files = [
  {
    name: "Guión Audiovisual Final",
    url: "https://docs.google.com/document/d/1By1xLU9ugRBYLWPW-cyDYmG1WbnPI4T8",
  },
  {
    name: "Informe Técnico",
    url: "https://docs.google.com/document/d/1ILlUSydz7bJJ-hql3OpBkJxF5ZF_NbCm",
  },
  {
    name: "Organigrama",
    url: "https://docs.google.com/document/d/1F44KmuTCRaNkypDJMdRmA7n2KMECrCkb",
  },
  ,
  {
    name: "Segmento y Artículos Grupo 4 Final",
    url: "https://docs.google.com/document/d/12JjgJbN8VPUgJun7RIzEfRkoXvkbfS7R",
